class Solution 
{
    public int peakElement(int[] arr)
    {
        int r=0;
        int m = Integer.MIN_VALUE;
        for(int i=0;i<arr.length;i++)
        {
            if(arr[i] > m)
            {
                m = arr[i];
                r = i;
            }
        }
        return r;
    }
}
